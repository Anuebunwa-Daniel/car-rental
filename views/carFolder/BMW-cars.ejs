<div class="container">
  
    <div id="car-slide" class="carousel carousel-dark slide"data-bs-ride="false">


      <% for(i =0; i<bmws.length; i++){ %>
        <button type="button" data-bs-target="#car-slide" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>

        <% } %> 
      <!-- <div class="carousel-indicators">
       <button  type="button" data-bs-target="#car-slide" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#car-slide" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#car-slide" data-bs-slide-to="2" aria-label="Slide 3"></button>
     </div> -->
  <div class="carousel-inner">
   <% bmws.forEach((bmw, inx)=>{ %>
 
     <% if (inx ==0){ %> 
       <div class= "carousel-item active">
        <img src="<%= bmw.image%>" class="d-block w-100" id="car-caro"alt="...">
        <div class="carousel-caption d-md-block">


          
          <div class="millage ">
            <p style="font-weight: 900;"><%=bmw.millage %> </p> <p style="font-weight: 900;">KM</p>
         </div>
            
             <div class="car-name">
                 <p> <%= bmw.carName %> </p>
             </div> 
              <div class="car-details">
                  <div class="car-properties">
                    <div class="seat" >
                      <h4 style="font-weight: 900;"><%= bmw.seater %></h4> <h4 style="font-weight: 900;"> seater</h4> 
                      </div>
                      <div>
                       <p><%= bmw.mechnism %> </p>
                      </div>

                      <div>
                       <p><%= bmw.combustion %> </p>
                      </div>

                      <div class="price" >
                        <h4 style="font-weight: 900;"><%= bmw.price %></h4> <h4 style="font-weight: 900;"> $</h4> 
                        </div>
                      
              
              </div>
            </div>
           </div>
      </div>
        <% }else { %> 
          <div class= "carousel-item">
            <img src="<%= bmw.image%>" class="d-block w-100" id="car-caro"alt="...">
            <div class="carousel-caption d-md-block">
    
              <div class="millage">
                <p style="font-weight: 900;"><%=bmw.millage %> </p> <p style="font-weight: 900;">KM</p>
             </div>
                
                 <h6 class="car-name">
